<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.apps.saad.animodule.changePassword">

    <TextView
        android:id="@+id/changePasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Change Password"
        android:textSize="26sp"/>

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/changePasswordTitle"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:hint="Current Password"
        android:inputType="textPassword"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/currentPassword"
        android:layout_alignStart="@+id/currentPassword"
        android:layout_below="@+id/currentPassword"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/updatePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newPassword"
        android:layout_alignRight="@+id/newPassword"
        android:layout_below="@+id/newPassword"
        android:layout_marginTop="61dp"
        android:text="Update Password"/>

</RelativeLayout>
