<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.apps.saad.animodule.setting">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Settings"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Full Name"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_below="@+id/settingsTitle"
        android:layout_alignLeft="@+id/Username"
        android:layout_alignStart="@+id/Username"/>

    <TextView
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/soundswitch"
        android:layout_alignStart="@+id/soundswitch"
        android:layout_below="@+id/settingsTitle"
        android:layout_marginTop="104dp"
        android:text="Username"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Usernameinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Username"
        android:layout_marginTop="12dp"
        android:text="Usernameinfo"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/Username"
        android:layout_alignStart="@+id/Username"/>

    <TextView
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Usernameinfo"
        android:layout_alignStart="@+id/Usernameinfo"
        android:layout_below="@+id/Usernameinfo"
        android:layout_marginTop="12dp"
        android:text="Password"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Passwordinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Password"
        android:layout_alignStart="@+id/Password"
        android:layout_below="@+id/Password"
        android:layout_marginTop="12dp"
        android:text="*******"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Passwordinfo"
        android:layout_alignStart="@+id/Passwordinfo"
        android:layout_below="@+id/Passwordinfo"
        android:layout_marginTop="12dp"
        android:text="Change Password"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/changePassword"
        android:layout_alignStart="@+id/changePassword"
        android:layout_below="@+id/changePassword"
        android:layout_marginTop="12dp"
        android:text="Email Address"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/useremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="12dp"
        android:text="email"
        android:textSize="18sp"/>

    <Switch
        android:id="@+id/soundswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/useremail"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:text="Sound "
        android:textSize="18sp"/>

    <Switch
        android:id="@+id/notificationswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/soundswitch"
        android:layout_alignStart="@+id/soundswitch"
        android:layout_below="@+id/soundswitch"
        android:layout_marginTop="17dp"
        android:text="Notifications "
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/firstlastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Last Name"
        android:textSize="18sp"
        android:layout_below="@+id/fullname"
        android:layout_alignLeft="@+id/fullname"
        android:layout_alignStart="@+id/fullname"
        android:layout_marginTop="11dp"/>

</RelativeLayout>
